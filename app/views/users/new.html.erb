
<h2>Create New User Account</h2>




<% if @user.errors.any? %>
  <p>Please correct the following errors:</p>
  <ul>
    <% @user.errors.each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>

<div class ="lg">


<%=  form_for @user do |f| %>

<%= f.label :name  %>
<%= f.text_field :name  %>

<br>

<%= f.label :email %>
<%= f.email_field :email %>

<br>


<%= f.label :password %>
<%= f.password_field :password %>
<br>



<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<br>




<%=  f.submit  'Sign up' %>

</div>

<% end %>
